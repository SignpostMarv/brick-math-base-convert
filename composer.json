{
    "name": "signpostmarv/brick-math-base-convert",
    "description": "Arbitrary Base Conversion Library",
    "type": "library",
    "keywords": [
        "Brick",
        "Math",
        "BigInteger",
        "Arbitrary Base Conversion"
    ],
    "license": "MIT",
	"config": {
		"classmap-authoritative": true,
		"sort-packages": true
	},
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^8.5",
        "psalm/plugin-phpunit": "dev-master",
        "vimeo/psalm": "^3.8"
    },
	"conflict": {
		"vimeo/psalm": "<3.8"
	},
    "autoload": {
        "psr-4": {
            "SignpostMarv\\Brick\\Math\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\Brick\\Math\\Tests\\": "tests/"
        }
    }
}
